import java.util.Scanner;
public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner leitor = new Scanner(System.in);		
		Calculadora calc = new Calculadora();

		int resul;	
		double numA;
		double numB;
		double resultado;
		
		
		System.out.println("Digite qual calculo você deseja realizar, 1-Soma 2-Subtração 3-Divisão 4-Multiplicacão");
		resul = leitor.nextInt();
		
switch(resul) {
		
		case 1: 		
		//SOMA SEM RETORNO E SEM PARÂMETRO
			System.out.println("Digite o 1º numero");
			calc.setNumA(leitor.nextDouble());
			System.out.println("Digite o 2º numero");
			calc.setNumB(leitor.nextDouble());
			calc.somatoria();
			break;
		case 2: 
		//SUBTRAÇÃO SEM RETORNO COM PARÂMETRO
			calc.subtracao(10, 5);
			System.out.print("O resultado da subtração é: " + calc.getResultado() +'\n');
			break;
		case 3: 
		//DIVISÃO SEM PARAMETRO E COM RETORNO
			System.out.println("Digite o 1º numero");
			calc.setNumA(leitor.nextDouble());
			System.out.println("Digite o 2º numero");
			calc.setNumB(leitor.nextDouble());
			
			if(calc.getNumB()==0) {
				System.out.println("Calculo Invalido");
			}
			else {
				System.out.print("A divisão é: " + calc.divisao()+'\n');
	
			}
			break;
		case 4: 	
		//MULTIPLICAÇÃO COM PARAMETRO E COM RETORNO
		calc.multiplicacao(4,5);
		System.out.print("O resultado da multiplicação é de: "+calc.multiplicacao(4,5));
			break;
		default:
			System.out.println("Numero Invalido");
		}
	}

}

